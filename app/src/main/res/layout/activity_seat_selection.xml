<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".SeatSelection">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/movies"
            android:textAllCaps="true"
            android:textColor="@color/yellow"
            android:textSize="@dimen/titleSize"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="32dp"
            android:background="@color/yellow" />

    </LinearLayout>


    <RadioGroup
        android:id="@+id/row1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginTopRadioGroup"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/horizontalPaddingRadioGroup">

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/row2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginTopRadioGroup"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/horizontalPaddingRadioGroup">

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="6"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="8"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="9"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="10"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/row3"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginTopRadioGroup"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/horizontalPaddingRadioGroup">

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="11"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="12"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="13"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
