        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="16"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="17"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="18"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="19"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:layout_marginHorizontal="@dimen/horizontalMarginRadioButton"
            android:background="@drawable/radio_selectable"
            android:button="@android:color/transparent"
            android:text="20"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/radioButtonText"
            android:textStyle="bold" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="40dp"
        android:background="@color/light_grey"
        android:text="Screen"
        android:textAlignment="center"
        android:textSize="23sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="@dimen/horizontalMarginRadioButton"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/symbols"
            android:layout_height="@dimen/symbols"
            android:layout_gravity="center_vertical"
            android:src="@drawable/radio_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="Avaible"
            android:textColor="@color/light_grey"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="@dimen/symbols"
            android:layout_height="@dimen/symbols"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/radio_disabled" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="Not Avaible"
            android:textColor="@color/light_grey"
            android:textSize="20sp" />
        <ImageView
            android:layout_width="@dimen/symbols"
            android:layout_height="@dimen/symbols"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/radio_selected" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="Your selection"
            android:textColor="@color/light_grey"
            android:textSize="20sp" />


    </LinearLayout>
    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:textColor="@color/grey"
        android:text="Confirm"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="70dp"/>
</LinearLayout>